<strong> Add New Branch for Product </strong>
<hr color="#eeddff" size="5px"><br>
<div id = "error"><%=h flash[:error] %></div>
<div id = "notification"><%=h flash[:notice] %></div><br>
<% form_tag '/product/add_branch' do %>
	Name of Branch: <%= text_field 'branch', 'branch_name', "size"=>"50" %> <br><br>
	Stock: <%= text_field 'branch', 'stock', "size"=>"10" %><br><br>
        <table>
        <th><%= submit_tag 'Submit' %> </th> 
		<% end %>
        <th><%= button_to 'Cancel', :action => 'index' %></th>
        </table>